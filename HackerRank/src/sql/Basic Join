// Asian Population

SELECT SUM(CITY.POPULATION) FROM CITY
INNER JOIN (SELECT POPULATION,CODE FROM COUNTRY 
           WHERE CONTINENT ='Asia') TEMP 
           ON CITY.COUNTRYCODE = TEMP.CODE;

// African Cities

SELECT CITY.NAME FROM CITY 
INNER JOIN (SELECT NAME,CODE FROM COUNTRY
           WHERE CONTINENT='Africa') TEMP 
           ON TEMP.CODE = CITY.COUNTRYCODE;
           
